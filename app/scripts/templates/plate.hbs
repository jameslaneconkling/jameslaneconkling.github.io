<div id="{{name}}-plate" class="plate animate">
  <h1 class="title show-for-small-only">{{name}}</h1>
  <ul class="no-bullet small-block-grid-1 large-block-grid-2">
    {{#each items}}
      <li class="item">
        <a href="#" class="clearfix">
          <div class="thumb" style="background-image: url('images/thumb/{{this.img}}')" title="{{this.title}}"></div>
          <div>{{this.title}}</div>
        </a>
      </li>
    {{/each}}
  </ul>
</div>
